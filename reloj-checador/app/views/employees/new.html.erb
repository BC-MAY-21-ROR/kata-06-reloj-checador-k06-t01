<div class="container col-md-4">
  <div class="row">
    <div class="col">
      <%= form_with model: @employee, url: employees_path do |form| %>
        <div class="form-group mb-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :position %>
          <%= form.text_field :position, class: 'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :employee_number %>
          <%= form.text_field :employee_number, class: 'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :private_number %>
          <%= form.text_field :private_number, class: 'form-control' %>
        </div>
        <div class="d-grid">
          <%= form.submit 'Crear', class: 'btn btn-success mt-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
