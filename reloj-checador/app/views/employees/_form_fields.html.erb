  <span class="text-danger"><%= error_message(@employee, :private_number) %></span>
</div>
<div class="form-group">
  <%= form.label :company, class:"label-form" %>
  <%= form.select :company_id, convert_to_option(@companies), {}, { class: 'form-select'} %>
</div>
<div class="mt-4">
  <div class="d-grid">
    <%= link_to 'Back', employees_path, class: 'btn btn-danger' %>
  </div>
  <div class="d-grid mt-2">
    <%= form.submit "#{button_title}", :class => 'btn form-btn' %>
  </div>
</div>
