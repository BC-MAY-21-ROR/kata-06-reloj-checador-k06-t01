<div class="form-group mb-4">
  <%= form.label :name, class:"label-form" %>
  <%= form.text_field :name, class: "in-form #{validate_input(@employee, :name)}" %>
  <span class="text-danger"><%= error_message(@employee, :name) %></span>
</div>
<div class="form-group mb-4">
  <%= form.label :email, class:"label-form" %>
  <%= form.text_field :email, class: "in-form #{validate_input(@employee, :email)}" %>
  <span class="text-danger"><%= error_message(@employee, :email) %></span>
</div>
<div class="form-group mb-4">
  <%= form.label :position, class:"label-form" %>
  <%= form.text_field :position, class: "in-form #{validate_input(@employee, :position)}" %>
  <span class="text-danger"><%= error_message(@employee, :position) %></span>
</div>
<div class="form-group mb-4">
  <%= form.label :employee_number, class:"label-form" %>
  <%= form.text_field :employee_number, class: "in-form #{validate_input(@employee, :employee_number)}" %>
  <span class="text-danger"><%= error_message(@employee, :employee_number) %></span>
</div>
