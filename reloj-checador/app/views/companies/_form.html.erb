<%= form_with(model: Company.new, local: true) do |form| %>
  <div class="modal-body">
    <div class="form-group mt-2">
      <%= form.label :name, class:'fw-bold' %> :
      <%= form.text_field :name, class:'mt-2 form-control', autocomplete:'off', id: id_name %>
    </div>
    <div class="form-group mt-2">
      <%= form.label :address, class:'fw-bold' %> :
      <%= form.text_field :address, class:'mt-2 form-control', autocomplete:'off', id: id_address %>
    </div>
  </div>
  <%= render "#{options}", form: form %>
<% end %>
