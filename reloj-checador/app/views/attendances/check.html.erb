<div class="container col-md-10 mt-5">
  <div class="d-flex justify-content-center align-items-center">
    <%= form_with model: @attendance, url: employee_check_path do |form| %>
      <h2>Check Clock</h2>
      <div class="form-group">
        <%= form.label :private_number %>
        <%= form.text_field :private_number, class: 'form-control'%>      
      </div>
      <div class="mt-3">
        <%= form.submit 'Check in', class: 'btn btn-success' %>
        <%= form.submit 'Check out', class: 'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>
