<%= form_with model: @employee, url: employees_path do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :position %>
    <%= form.text_field :position, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :employee_number %>
    <%= form.text_field :employee_number, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :private_number %>
    <%= form.text_field :private_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :empresa %>
    <%= form.select :company_id, convert_to_option(@companies), {}, { class: 'form-select'} %>
  </div>
  <%= render 'options', form: form, button_title: button_title %>
<% end %>
